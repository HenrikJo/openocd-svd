#===============================================================================
# Tools
#===============================================================================
PYUIC = pyuic5

#===============================================================================
# Paths and files
#===============================================================================
APPPATH = ../app

UIFILES = $(wildcard *.ui)
UIPYFILES = $(addprefix ${APPPATH}/ui_, $(patsubst %.ui, %.py, $(UIFILES)))

#===============================================================================
# Make all targets
#===============================================================================
all: ui

#===============================================================================
# Convert .ui to .py
#===============================================================================
ui: $(UIPYFILES)

${APPPATH}/ui_%.py: %.ui
	@echo $< "->" $@
	@$(PYUIC) -x $< -o $@

clean:
	rm -f ${UIPYFILES}
